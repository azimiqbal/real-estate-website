---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import prosjektPic from '../assets/prozzy.jpeg';
import contact from '../assets/H5.jpg';
import bre from '../assets/bre.jpg';
import newHouse3 from '../assets/newHouse3.jpeg';

const pageTitle = "Utforsk våre prosjekter - NT Bolig | pågående og ferdigstilte byggeprosjekter";
const pageDescription = "Se NT Boligs imponerende portefølje av pågående og ferdigstilte byggeprosjekter. Fra moderne eneboliger til nøkkelferdige løsninger, oppdag hvordan vi bringer innovasjon og kvalitet til hver eiendomsutvikling.";
---

<Layout title={pageTitle} description={pageDescription}>
	<Header position="absolute"/>
	<main>
        <Image src={prosjektPic} class="logos" alt="" loading="eager" />
        <div class="overlay-text">
            <h2>Prosjekter vi er stolte av</h2>
            <h4>Pågående prosjekter i NT Bolig</h4>
        </div>
        <h4 class="quality">Vi leverer kvalitet - gang på gang!</h4>
        <div class="intro-text">
            <p>
                NT Bolig har god erfaring med alt innen eiendomsutvikling, og vårt team hjelper deg med å skreddersy din bolig til dine ønsker. Her ser du noen av våre ferdigstilte og pågående prosjekter, som kan gi deg inspirasjon til hva vi kan hjelpe deg med.
            </p>
        </div>
        <h3>Referanse prosjekter</h3>
        <div class="image-grid">
            <div class="image-item">
                <Image src={bre} alt="" loading="eager" />
                <div class="image-text">
                    <h3>Flott og moderne enebolig</h3>
                </div>
            </div>
            <div class="image-item">
                <Image src={newHouse3} alt="" loading="eager" />
                <div class="image-text">
                    <h3>Enebolig på Eidvoll - en klassisk stil men samtidig et særpreg</h3>
                </div>
            </div>
        </div>
        <div class="contact-us">
            <div class="contacting">
                <Image src={contact} alt="contact us section" loading="eager" />
            </div>
            <a href="/kontakt-oss">
                <button>Kontakt oss for befaring</button>
            </a>
        </div>
	</main>
   <Footer/>
</Layout>

<style>

    :root {
		--bg-color: #1c1c1c;
		--bg-color-light: #3b3b3b;
	}

    main {
        height: auto;
        padding-bottom: 2em;
        position: relative;
        background-color: var(--bg-color);
    }

    .contact-us {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 80px;
    }

    .contacting {
        position: relative;
        width: 100%;
        padding-bottom: 12px;
    }

    .contacting img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        filter: brightness(0.4);
    }
    
    .quality {
        font-size: 2em;
        text-align: center;
        font-weight: 700;
        color: white;
        padding: 6px;
    }

    h4 {
        font-weight: 500;
    }

    h3 {
        text-align: center;
        font-size: 2em;
        font-weight: 500;
        color: white;
    }


	button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* Adjust the button's position */
		border: 2px solid white;
		padding: 10px;
		background-color: transparent;
		color: white;
        width: 300px;
		font-size: 1.3rem;
		cursor: pointer;
		border-radius: 8px;
	}

	button:hover {
		background: whitesmoke;
        color: black;
	}

    @media (max-width: 480px) {
        button {
            width: 200px;
            font-size: 1rem;
        }
    }

    .logos {
        width: 100%;
        height: 600px;
        object-fit: cover;
        filter: brightness(0.6);
    }

    .overlay-text {
        position: absolute;
        top: 15%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 2em;
        text-align: center;
    }

    .intro-text {
        position: relative;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 8px 8px 40px 8px;
        box-sizing: border-box;
        color: white;
        font-family: "Roboto", sans-serif;
        text-align: center;
}

    @media (max-width: 768px) {
        .intro-text {
            font-size: 1em;
            line-height: 22px;
        }

        .overlay-text {
            padding-top: 4em;
        }
    }

    .image-grid {
        display: grid;
        grid-gap: 20px;
        padding: 80px;
    }
    
    .image-item {
        position: relative;
        overflow: hidden;
        padding-bottom: 50px;
    }

    .image-text {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: var(--bg-color-light);
        padding: 6px;
    }

    .image-text h3 {
        margin: 0 0 16px 0;
        font-size: 1.15rem;
        color: rgb(255, 255, 255);
        text-align: center;
    }


    .image-grid img {
        width: 100%;
        height: 100%;
        margin: 0 auto;
        object-fit: cover;
    }

    @media (min-width: 1025px) {
        .image-grid {
            grid-template-columns: repeat(2, 1fr);
            padding: 0 0 30px 0;
            margin: 0 auto;
            width: 1250px;
            height: auto;
            border-radius: 8px;
        }
    }

    @media (max-width: 1024px) {
        .image-grid {
            grid-template-columns: repeat(2, 1fr);
            padding: 30px;
        }
    }
    @media (max-width: 480px) {
        .image-grid {
            grid-template-columns: 1fr;
            padding: 30px;
        }

        .overlay-text {
            top: 10%;
        }

    }

</style>
