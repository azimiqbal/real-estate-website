---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="NT Bolig - Kontakt oss">
    <Header backgroundColor="rgba(52, 56, 65, 1)"/>
    <main>
        <div class="wrapper">
            <div class="tjenester">
                <h1>Tjenester</h1>
                <ul>
                    <li>Salg av huselementer</li>
                    <li>Arkitektbistand</li>
                    <li>Prosjekteringstjenester</li>
                    <li>Bygge og prosjektledelse</li>
                    <li>Montering, graving og elektrisk arbeid</li>
                </ul>
            </div>
        </div>
    </main>
    <Footer/>
</Layout>

<style>
    :global(body) {
        background-color: whitesmoke;
    }

    main {
        font-size: 22px;
        font-family: 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        height: 100vh;
    }

    .wrapper {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        width: 100%;
        padding-top: 100px;
    }

    h1 {
        margin-left: 40px;
        padding-top: 40px;
    }

    .tjenester {
        display: flex;
        background-color: rgba(52, 56, 65, 1);
        color: rgb(247, 244, 244);
        width: 600px;
        border-radius: 50px;
        padding: 10px;
        margin: 8px;
    }

    @media (max-width: 500px) {
        .wrapper {
            padding-top: 50px;
        }

        .tjenester {
            display: block;
            width: 100%;
            padding: 8px;
        }

        h1 {
            padding-top: 0;
        }
    }

    li {
        font-size: 18px;
        line-height: 30px;
    }
</style>
