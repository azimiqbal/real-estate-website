---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="NT Bolig - Salg av huselementer">
	<Header />
	<main>
		<div class="container">
			<div class="image-container">
				<img src="./bre.jpg" alt="" class="darkened">
				<div class="content-wrapper">
					<div class="text-container">
						<h1>Velkommen til NT Bolig</h1>
						<h2>Eiendomsutvikling og salg av huselementer</h2>
					</div>
					<div class="button-container">
						<button>Les mer</button>
					</div>
				</div>
			</div>
		</div>
	</main>
	<Footer/>
</Layout>

<style>

	:global(body) {
		background-color: whitesmoke;
    }
	body, html {
    	overflow-x: hidden;
  	}

	main {
		color: white;
		font-size: 22px;
		font-family: serif;
	}

	.container {
		position: relative;
		width: 100%;
		height: 100vh;
	}

	.image-container {
		position: relative;
		width: 100%;
		height: 100%;
	}

	img {
		object-fit: cover;
		width: 100%;
		height: 100%;
		z-index: -1;
	}

	.darkened {
		filter: brightness(0.6);
	}

	.content-wrapper {
		position: absolute;
		top: 30%;
		left: 50%;
		transform: translate(-50%, -50%);
		text-align: center;
	}

	.text-container {
		margin-bottom: 20px;
	}

	h1,
	h2 {
		margin: 0;
	}

	h1 {
		font-size: 3em;
	}

	h2 {
		font-size: 1.5em;
		font-weight: 500;
	}

	@media (max-width: 768px) {
		.text-container {
			width: 100%;
		}

	    h1 {
	        font-size: 1.5em;
	    }

	    h2 {
	        font-size: 0.8em;
	    }
	}

	.button-container {
		position: relative;
	}
	button {
		border: 2px solid white;
		padding: 10px 20px;
		background-color: fff;
		color: darkslategrey;
		font-size: 1.5rem;
		cursor: pointer;
		border-radius: 8px;
	}

	button:hover {
		background: lightgray;
	}

</style>
