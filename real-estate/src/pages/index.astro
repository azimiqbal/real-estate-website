---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import bre from '../assets/bre.jpg';
import snaroya1 from '../assets/snaroya1.jpg';
import snaroya4 from '../assets/snaroya4.jpg';

---

<Layout title="NT Bolig - Salg av huselementer">
    <Header />
    <main>
        <div class="container">
            <div class="image-container">
				<Image src={bre} class="darkened" alt="Klopp holding the trophy" loading="eager" />
                <div class="content-wrapper">
                        <h1 class="headline">Velkommen til NT Bolig</h1>
                        <h2>Eiendomsutvikling og eiendomstjenester</h2>
                    <div class="button-container">
                        <button class="scroll-button">Les mer</button>
                    </div>
                </div>
            </div>
        </div>
		<div class="target-section" id="target-section">
			<div class="content">
				<h4>Headertext</h4>
				<p>
				Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
				</p>
			</div>
			<div class="column-image">
				<Image src={snaroya1} class="imgy" alt="Klopp holding the trophy" loading="lazy" />
			</div>
		</div>
		<div class="target-section">
			<div class="column-image">
				<Image src={snaroya4} class="imgy" alt="Klopp holding the trophy" loading="lazy" />
			</div>
			<div class="content">
				<h4>Headertext</h4>
				<p>
				Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
				</p>
			</div>
		</div>
    </main>
    <Footer/>
    <script>
        const button = document.querySelector('.scroll-button');
        const targetSection = document.getElementById('target-section');

        button?.addEventListener('click', () => {
            if (targetSection) {
                targetSection.scrollIntoView({ behavior: 'smooth' });
            }
        });
    </script>
</Layout>


<style>

	:global(body) {
		background-color: whitesmoke;
    }
	body, html {
    	overflow-x: hidden;
  	}

	main {
		color: white;
		font-size: 22px;
		font-family:'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
	}

	.container {
		width: 100%;
		height: 100vh;
	}

	.image-container {
		height: 100%;
	}

	.darkened {
		filter: brightness(0.6);
		object-fit: cover;
		width: 100%;
		height: 100%;
		z-index: -1;
	}

	.content-wrapper {
		position: absolute;
		top: 25%;
		left: 50%;
		transform: translate(-50%, -50%);
		text-align: center;
	}

	.headline {
		width: max-content;
	}


	h1 {
		font-size: 3em;
	}

	h2 {
		font-size: 1.5em;
		font-weight: 500;
	}

	p {
		font-family: "ModernEra", "Helvetica", sans-serif;
		-webkit-font-smoothing: antialiased;
		font-size: 1.25rem;
		line-height: 2.4rem;
	}

	@media (max-width: 768px) {
		.text-container {
			width: 100%;
		}

	    h1 {
	        font-size: 1.5em;
	    }

	    h2 {
	        font-size: 0.8em;
	    }
	}

	.button-container {
		position: relative;
	}
	button {
		border: 2px solid white;
		padding: 10px 20px;
		background-color: fff;
		color: darkslategrey;
		font-size: 1.5rem;
		cursor: pointer;
		border-radius: 8px;
	}

	button:hover {
		background: lightgray;
	}

	.target-section {
		display: grid;
		gap: 2rem;
		padding: 20px;
		grid-template-columns: repeat(2, 47vw);
		grid-template-rows: 50vh;
		background-color: #fff;
		color: #444;
	}

	.content {
		color: black;
		width: calc(100% - 50px);
		padding: 12px;
	}

	.column-image {
		max-height: 500px;
		width: 100%;
	}

	.imgy {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}


	@media (max-width: 768px) {
    .target-section {
        grid-template-columns: 100%;
        grid-template-rows: auto;
    }
    .content {
        order: 1;
    }
    .column-image {
        order: 2;
    }
}

</style>
