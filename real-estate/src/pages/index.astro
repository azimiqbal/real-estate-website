---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="NT Bolig - Salg av huselementer">
	<main>
		<div class="ok">
			<Header />
			<div class="image-container">
				<img src="./bre.jpg" alt="" class="darkened">
				<div class="text-container">
					<h1>NT Bolig</h1>
					<h2>Salg av huselementer</h2>
				</div>
			</div>
			<button>Kontakt oss</button>
		</div>
	</main>
</Layout>

<style>
	main {
		color: white;
		font-size: 22px;
		height: 95vh;
		font-family: serif;
	}

	.ok {
		position: relative;
		width: 100%;
		height: 100%;
	}

	.image-container {
		position: relative;
		width: 100%;
		height: 100%;
	}

	img {
		object-fit: cover;
		width: 100%;
		height: 100%;
	}

	.darkened {
		filter: brightness(0.5);
	}

	.text-container {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		text-align: center;
	}

	h1,
	h2
	 {
		margin: 0;
	}

	button {
		position: absolute;
		bottom: 20px;
		left: 50%;
		transform: translateX(-50%);
		padding: 10px 20px;
		border: none;
		background-color: #f1f1f1;
		color: black;
		font-size: 1.5rem;
		cursor: pointer;
		border-radius: 8px;
	}
</style>
