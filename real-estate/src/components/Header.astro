---
import { Image } from 'astro:assets';
import huh from '../assets/huh.png';
import arrowDown from '../assets/chevy.png';
import arrowDownMobile from '../assets/down-arrow.svg';

type Props = {
  backgroundColor?: string;
  position?: string;
};

const { backgroundColor, position } = Astro.props as Props;
---
<header class="header" style={`background-color: ${backgroundColor}; position: ${position};`}>
  <div class="logo">
    <a href="/">
      <div class="logo-container">
        <Image src={huh} class="logos" alt="header logo" loading="eager"/>
        <span>NT Bolig</span>
      </div>
    </a>    
  </div>
  <nav class="site-navigation">
    <ul class="nav">
      <li><a href="/huselementer/">Huselementer</a></li>
      <li><a href="/prosjekter/">Prosjekter</a></li>
      <li class="dropdown">
        <div class="dropdown-container">
          <a href="/tjenester/">Våre tjenester</a>
          <Image src={arrowDown} class="arrow" alt="arrow down" loading="eager" />
          <div class="dropdown-content">
              <a href="/kjokken/">Kjøkken</a>
              <a href="/garderobe/">Garderobe</a>
          </div>
        </div>
      </li>
      
      <li><a href="/om-oss/">Om oss</a></li> 
      <li><a href="/kontakt-oss/">Kontakt oss</a></li> 
    </ul>
  </nav>
  <div class="mobile-nav-toggle">
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
  </div>
  <div class="mobile-nav">
    <ul class="nav">
      <li><a href="/huselementer/">Huselementer</a></li>
      <li><a href="/prosjekter/">Prosjekter</a></li>
      <li class="has-submenu">
        <a href="/tjenester/">Våre tjenester</a>
        <Image src={arrowDownMobile} class="arrow-mobile" alt="arrow down" loading="eager" />
        <ul class="submenu">
          <li><a href="/kjokken/">Kjøkken</a></li>
          <li><a href="/garderobe/">Garderobe</a></li>
        </ul>
      </li>
      <li><a href="/om-oss/">Om oss</a></li> 
      <li><a href="/kontakt-oss/">Kontakt oss</a></li> 
    </ul>
  </div>
</header>

<script>
  const mobileNavToggle = document.querySelector('.mobile-nav-toggle');
  const mobileNav = document.querySelector('.mobile-nav');
  const arrowMobile = document.querySelector('.arrow-mobile');
  const submenu = document.querySelector('.has-submenu .submenu');

  mobileNavToggle?.addEventListener('click', () => {
    mobileNav?.classList.toggle('active');
  });

  arrowMobile?.addEventListener('click', () => {
    submenu?.classList.toggle('active');
    arrowMobile.classList.toggle('rotated');
  });
</script>

<style>    
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    z-index: 1000;
    font-size: 18px;
    border-bottom: 1px solid white;
  }


  .arrow {
    position: relative;
    top: 5px;
    height: 20px;
    width: 20px;
    cursor: pointer;
}

  .dropdown-content {
    width: 200px;
    margin-top: 2px;
    display: none;
    position: absolute;
    background-color: rgb(91, 93, 97);
    border-radius: 6px;
    text-align: center;
  }

  .dropdown:hover .dropdown-content {
      display: block;
  }

  .dropdown-content a {
      padding: 12px;
      text-decoration: none;
      display: block;
  }
  
  
  .arrow-mobile {
    position: relative;
    top: 5px;
    height: 20px;
    width: 20px;
  }

  .submenu {
    display: none;
  }

  .submenu.active {
    display: block;
  }

  .submenu.active li:first-child,
  .submenu.active li:last-child {
    border-bottom: none;
  }


  .arrow-mobile.rotated {
    transform: rotate(180deg);
  }

  .logo-container {
    display: flex;
    align-items: center;
    transition: transform 0.2s ease;
  }

  .logo-container:hover {
    transform: scale(1.1);
  }

  .logo-container span {
    margin-top: 8px;
  }

  a {
    text-decoration: none;
    color: white;
  }
  
  .logos {
      height: 105px;
      width: 120px;
  }

  span {
    font-weight: 700;
  }

  @media (max-width: 768px) {
  .logos {
    height: 65px;
    width: 80px;
  }
}

  .site-navigation ul {
    display: flex;
    list-style: none;
  }

  .site-navigation li {
    margin: 0 12px 0 12px;
    transition: transform 0.3s ease;
  }

  .nav li:not(:last-child) {
    border-right: 1px solid rgb(234, 229, 229);
    padding-right: 15px;
  }

  .site-navigation a {
    text-decoration: none;
    color: white;
    position: relative;
    overflow: hidden;
    font-size: 22px;
  }

  .site-navigation a:hover {
    color: white;
  }

  .site-navigation a::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: white;
    transform: scaleX(0);
    transition: transform 0.2s ease;
  }

  .site-navigation a:hover::after {
    transform: scaleX(1);
  }

  .mobile-nav-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    height: 16px;
    cursor: pointer;
    margin-top: 8px;
  }

  .bar {
    width: 24px;
    height: 2px;
    background-color: white;
  }

  .mobile-nav {
    display: none;
    position: absolute;
    top: 50px;
    height: 100vh;
    width: 100%;
    background-color: rgb(234, 229, 229);
    border-radius: 8px;
    margin-top: 18px;
  }

  .mobile-nav ul {
    list-style: none;
    text-align: center;
    padding: 0;
  }

  .mobile-nav li {
    border-bottom: 1px solid gray;
    padding: 14px;
    margin: 8px;
  }

  .mobile-nav a {
    color: black;
  }

  .mobile-nav a:hover {
    background-color: #f5f5f5;
  }

  .mobile-nav.active {
    display: block;
  }

  @media (max-width: 950px) {
    .site-navigation {
      display: none;
    }
    
    .mobile-nav-toggle {
      display: flex;
    }
  }
</style>
